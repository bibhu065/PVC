<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.anchor.pvc.MainActivity"
    android:weightSum="1"
    android:background="@color/applicaionfrontpagebackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="180sp"
        android:layout_height="90sp"
        android:id="@+id/rl1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_1"
            android:id="@+id/btn1"
            android:onClick="introduction"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl2"
        android:layout_toEndOf="@id/rl1"
        android:layout_marginStart="15sp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_2"
            android:id="@+id/btn2"
            android:onClick="pvcpreparation"
            android:background="@color/applicationfrontpage"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl3"
        android:layout_below="@id/rl1"
        android:layout_marginTop="15sp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_3"
            android:id="@+id/btn3"
            android:onClick="compositioninpvccompound"
            android:background="@color/applicationfrontpage"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl4"
        android:layout_toEndOf="@id/rl3"
        android:layout_below="@id/rl2"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_4"
            android:id="@+id/btn4"
            android:onClick="compounddensitypricecalculation"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl5"
        android:layout_below="@id/rl3"
        android:layout_marginTop="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_5"
            android:id="@+id/btn5"
            android:onClick="compounddensitycalculation"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl6"
        android:layout_below="@id/rl4"
        android:layout_toEndOf="@id/rl5"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_6"
            android:id="@+id/btn6"
            android:onClick="compoundpricecalculation"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl7"
        android:layout_below="@id/rl5"
        android:layout_marginTop="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_7"
            android:id="@+id/btn7"
            android:onClick="autobomcalculation"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl8"
        android:layout_below="@id/rl6"
        android:layout_toEndOf="@id/rl7"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_8"
            android:id="@+id/btn8"
            android:onClick="basicformulation"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl9"
        android:layout_below="@id/rl7"
        android:layout_marginTop="15sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_9"
            android:id="@+id/btn9"
            android:onClick="troubleshootingguides"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl10"
        android:layout_below="@id/rl8"
        android:layout_toEndOf="@id/rl9"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_11"
            android:id="@+id/btn11"
            android:onClick="rmtestprocedure"
            android:background="@color/applicationfrontpage"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/border_width"
        android:layout_height="@dimen/border_height"
        android:id="@+id/rl11"
        android:layout_below="@id/rl9"
        android:layout_marginTop="15sp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bt_12"
            android:id="@+id/btn12"
            android:onClick="basicrmspecification"
            android:background="@color/applicationfrontpage"
            />
    </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn10"
            android:onClick="aboutme"
            android:text="@string/bt_10"
            android:background="@color/applicationfrontpage"
            android:layout_alignTop="@+id/rl11"
            android:layout_alignStart="@+id/rl10"
            android:layout_alignBottom="@+id/rl11"
            android:layout_alignEnd="@+id/rl10" />
        </RelativeLayout>




</ScrollView>

